#fblinks .col-sm-6:nth-of-type(1)
  text-align: right
#fblinks .col-sm-6:nth-of-type(2)
  text-align: left

@media (max-width: 768px)
  h2 small
    display: block
  #fblinks .col-sm-6
    text-align: center!important 

g.victim
